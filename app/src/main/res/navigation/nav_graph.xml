<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.cocktailapp.fragments.OrdinaryDrinksFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/ordinary_drinks_fragment">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.cocktailapp.fragments.ShotDrinksFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/ordinary_drinks_fragment">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/firtdFragment"
        android:name="com.cocktailapp.fragments.FilterFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" />
</navigation>